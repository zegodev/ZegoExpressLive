/* pages/tool/live/index.wxss */
live-pusher,live-player{
    width: 100vw;
    height: 100vh;
}

.operate {
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    right: 0;
    left: 0;
    bottom: 6vh;
    width: fit-content;
    height: 8vw;
}

.poster{
     width: 100%;
    height: 100%;
}

.img-box {
    position: relative;
    display:inline-block;
    height: 8vw;
    width: 13.6vw;
    vertical-align: middle;
}

.img-view {
    position: relative;
    display: block;
    width: 8vw;
    height: 8vw;
    margin-left: 2.8vw;
}
.img-view:active{
    opacity: 0.55
}
.text-view {
    position: relative;
    display: block;
    color: #ffffff;
    width: 100%;
    font-size:10px;
    text-align: center;
}
