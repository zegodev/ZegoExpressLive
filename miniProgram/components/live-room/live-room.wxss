/* components/live-room/live-room.wxss */
@import "./vertical1v3template/vertical1v3.wxss";
@import "./1v3template/1v3.wxss";
@import "./1v1template/1v1.wxss";

live-pusher,live-player,video{
    width: 100%;
    height: 100%;
}

.poster{
    height: 100%;
    width: 100%;
}

.poster cover-image{
    height: 100%;
    width: 100%;
}

.character {
    position: absolute;
    left: 0;
    bottom: 0;
    /* z-index: 1000; */
    font-size: 16px;
    color: #999;
    width: 100%;
    height: 10vw;
    line-height: 10vw;
    text-align: left;
}

.operate {
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    right: 0;
    left: 0;
    bottom: 6vh;
    width: fit-content;
    height: 8vw;
}

.img-box {
    position: relative;
    display:inline-block;
    height: 8vw;
    width: 13.6vw;
    vertical-align: middle;
}

.img-view {
    position: relative;
    display: block;
    width: 8vw;
    height: 8vw;
    margin-left: 2.8vw;
}
.img-view:active{
    opacity: 0.55
}
.text-view {
    position: relative;
    display: block;
    color: #ffffff;
    width: 100%;
    font-size:10px;
    text-align: center;
}


.loading {
    position: absolute;
    width: 100%;
    height: 100%;
}
.loading cover-image {
    position: absolute;
    top: calc(50% - 15px);
    left: calc(50% - 15px);
    width: 30px;
    height: 30px;
}
.close-ico {
    position: absolute;
    top: 0;
    right: 2vw;
    text-align: center;
    font-size: 24px;
    color: #ffffff;
}
.close-ico:hover {
    color: #afafaf;
}